{% comment %}
Horizontal stripes — lists all events (PT in BR, EN outside).
Edit each line in {% capture lives %}: DatePT||DateEN||TitlePT||TitleEN
Ex.: 01/01/2026 — 20:15 BRT||Jan 01, 2026 — 8:15 PM BRT||EVENT_TITLE_PT||EVENT_TITLE_EN
{% endcomment %}

{% assign is_br = true %}
{% unless localization.country.iso_code == 'BR' %}
  {% assign is_br = false %}
{% endunless %}

{% capture lives %}
01/01/2026 — 20:15 BRT||Jan 01, 2026 — 8:15 PM BRT||EVENT_TITLE_PT_01||EVENT_TITLE_EN_01
15/01/2026 — 20:15 BRT||Jan 15, 2026 — 8:15 PM BRT||EVENT_TITLE_PT_02||EVENT_TITLE_EN_02
29/01/2026 — 20:15 BRT||Jan 29, 2026 — 8:15 PM BRT||EVENT_TITLE_PT_03||EVENT_TITLE_EN_03
{% endcapture %}

{% assign lines = lives | strip | newline_to_br | split: '<br />' %}

<section class="live-stripes">
  <h2 class="ls-heading">
    {% if is_br %}{{ "PRÓXIMOS VÍDEOS" | upcase }}{% else %}{{ "UPCOMING VIDEOS" | upcase }}{% endif %}
  </h2>

  <div class="stripes">
    {% for raw in lines %}
      {% assign line = raw | strip %}
      {% if line == blank %}{% continue %}{% endif %}

      {% assign p = line | split: "||" %}
      {% assign date_pt  = p[0] | default: "" %}
      {% assign date_en  = p[1] | default: "" %}
      {% assign title_pt = p[2] | default: "" %}
      {% assign title_en = p[3] | default: "" %}

      <div class="stripe">
        <span class="date-pill">
          {% if is_br %}
            {{ date_pt | upcase }}
          {% else %}
            {{ date_en | upcase }}
          {% endif %}
        </span>
        <span class="title">
          {% if is_br %}
            {{ title_pt | upcase }}
          {% else %}
            {{ title_en | upcase }}
          {% endif %}
        </span>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .live-stripes{width:100%; padding:16px 0}
  .ls-heading{margin:0 0 14px; text-align:center; font-size:1.4rem; color:#09092F}
  .stripes{display:grid; grid-template-columns:1fr; gap:12px}
  .stripe{
    width:100%;
    display:flex; align-items:center; justify-content:flex-start;
    gap:12px; flex-wrap:wrap;
    background:#09092F; color:#fff;
    border-radius:6px;
    padding:12px 16px; min-height:72px;
  }
  .date-pill{
    background:#19CB95; color:#000;
    padding:6px 12px;
    border-radius:4px;
    font-weight:800;
    white-space:nowrap;
    display:inline-block;
    text-transform: uppercase;
  }
  .title{
    font-size:1.05rem; font-weight:800; line-height:1.3;
    color:#fff; text-align:left;
    text-transform: uppercase;
  }
  @media (max-width:1024px){
    .stripe{flex-direction:column; align-items:flex-start; gap:8px}
    .title{width:100%; font-size:1rem}
    .date-pill{font-size:.95rem; padding:5px 10px}
  }
  @media (max-width:768px){
    .title{font-size:.98rem}
    .date-pill{font-size:.92rem; padding:4px 10px}
  }
</style>
